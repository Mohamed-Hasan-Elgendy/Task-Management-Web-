@model IEnumerable< myteammember>
@{
}
<h1>Member Management</h1>
<hr />


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Member Name</th>
            <th>Member Email</th>
            <th>Member Role</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
           {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Role</td>
                <td>
                    <a class="btn btn-primary" asp-action="Update" asp-route-id="@item.Id">Update</a>                   
                </td>
            </tr>
           }
    </tbody>
</table>